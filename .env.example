# Emotiv Cortex API - https://www.emotiv.com/developer
EMOTIV_CLIENT_ID=
EMOTIV_CLIENT_SECRET=

# Ollama (local LLM, no cloud) - for Jetson / edge
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=phi3:mini

# Multi-turn agent (Greylock-style: ask → adjust → follow up)
MULTITURN_AGENT=true
FOLLOW_UP_INTERVAL=90

# Split setup: Mac (activity + EEG) -> Jetson (processor) via ngrok
# Get token: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=

# Mac collector: use ngrok URL (replace https -> wss)
# JETSON_WS_URL=wss://xxxx-xx-xx-xx-xx.ngrok-free.app
JETSON_WS_URL=ws://localhost:8765
