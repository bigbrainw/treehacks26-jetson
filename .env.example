# Emotiv Cortex API - https://www.emotiv.com/developer
EMOTIV_CLIENT_ID=
EMOTIV_CLIENT_SECRET=

# Mental command for pizza: train one action (push, pull, lift, etc.) in Emotiv; when detected → order pizza
MENTAL_COMMAND_PIZZA=push
MENTAL_COMMAND_POWER_THRESHOLD=0.5

# Pizza delivery address (MCPizza/Domino's/Zomato)
PIZZA_DELIVERY_ADDRESS=475 Via Ortega, Stanford, CA 94305
# Pizza provider: mcpizza (Domino's) | zomato (requires ZOMATO_ACCESS_TOKEN below)
PIZZA_PROVIDER=mcpizza
# Zomato MCP - OAuth token; get via Postman (oauth.pstmn.io) or Cursor MCP
# ZOMATO_ACCESS_TOKEN=

# Anthropic Claude - get key at https://console.anthropic.com
ANTHROPIC_API_KEY=
# claude-3-5-sonnet-20241022 (default) | claude-3-opus for best quality | claude-3-haiku for faster/cheaper
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Use Claude Agent SDK (WebSearch, WebFetch) for stuck-state synthesis. Set false for Messages API only.
USE_AGENT_SDK=true

# Multi-turn agent (Greylock-style: ask → adjust → follow up)
MULTITURN_AGENT=true
FOLLOW_UP_INTERVAL=90

# Split setup: Mac (activity + EEG) -> Jetson (processor) via ngrok
# Get token: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=

# Mac collector: use ngrok URL (replace https -> wss)
# JETSON_WS_URL=wss://xxxx-xx-xx-xx-xx.ngrok-free.app
JETSON_WS_URL=ws://localhost:8765
